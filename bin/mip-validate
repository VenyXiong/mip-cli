#!/usr/bin/env node

const cli = require('../lib/cli');

const args = cli.setup({
    usage: '<page-name...>',
    help: [
          '  Examples:',
          cli.chalk.gray('    # 检查一个mip页面'),
          '    $ mip validate page.html page1.html',
      ].join('\n')
});

if (args.length) {
    require('../lib/validate').exec({
        files: args
    });
}
